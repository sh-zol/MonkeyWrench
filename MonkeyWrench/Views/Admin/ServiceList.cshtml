@using Domain.Core.HomeService.DTOS;
@model List<ServiceDTO>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>لیست سرویس‌ها</h3>
        <a asp-controller="Admin" asp-action="CreateService" class="btn btn-success btn-sm">
            اضافه کردن سرویس
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>شناسه</th>
                <th>نام سرویس</th>
                <th class="text-center">اعمالات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                <tr>
                    <td>@service.Id</td>
                    <td>@service.Title</td>
                    <td class="text-center">
                        <a asp-controller="Admin" asp-action="DeleteService" asp-route-id="@service.Id"
                           class="btn btn-danger btn-sm">
                            حذف سرویس
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        font-size: 0.9rem;
    }

    .btn {
        font-size: 0.85rem;
    }

    h3 {
        font-weight: bold;
        color: #333;
    }
</style>
