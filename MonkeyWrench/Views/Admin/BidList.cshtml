@using Domain.Core.HomeService.DTOS;
@model List<BidDTO>;

<div class="container-fluid">
    <!-- Title Section -->
    <div class="row mb-4">
        <div class="col-lg-12 text-center">
            <h1 class="text-primary mt-3">لیست پیشنهادات</h1>
            <p class="text-muted">
                در این بخش می‌توانید پیشنهادات ثبت‌شده توسط متخصصین را مشاهده و مدیریت کنید.
            </p>
        </div>
    </div>

    <!-- Bids Table -->
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">شناسه</th>
                        <th scope="col">نام متخصص</th>
                        <th scope="col">تاریخ انجام</th>
                        <th scope="col">قیمت پیشنهادی</th>
                        <th scope="col">وضعیت</th>
                        <th scope="col">عملیات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var bid in Model)
                    {
                        <tr>
                            <td>@bid.Id</td>
                            <td>@bid.ExpertName</td>
                            <td>@bid.DeadLine</td>
                            <td>@bid.Price</td>
                            <td>
                                @if (bid.IsAccepted)
                                {
                                    <span class="badge badge-success">تایید شده</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">تایید نشده</span>
                                }
                            </td>
                            <td>
                                <a asp-controller="Admin" asp-action="DeleteBid" asp-route-id="@bid.Id" class="btn btn-danger btn-sm">
                                    حذف
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
