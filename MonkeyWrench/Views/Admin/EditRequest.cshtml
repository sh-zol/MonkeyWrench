@using Domain.Core.HomeService.DTOS
@model RequestDTO

<div class="container mt-4">
    <form method="post" asp-controller="Admin" asp-action="EditRequest" class="border p-4 rounded shadow-sm">
        <h3 class="text-primary mb-4">ویرایش سفارش</h3>

        <div class="mb-3">
            <label asp-for="Price" class="form-label">قیمت</label>
            <input asp-for="Price" class="form-control" placeholder="قیمت" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StatusId" class="form-label">وضعیت سفارش</label>
            <select asp-for="StatusId" class="form-select" asp-items="ViewBag.Statuses">
                <option disabled selected>انتخاب وضعیت</option>
            </select>
            <span asp-validation-for="StatusId" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary mx-2">ویرایش</button>
            <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">بازگشت</a>
        </div>
    </form>
</div>

<style>
    .form-control, .form-select {
        font-size: 0.9rem;
    }

    .form-label {
        font-weight: bold;
        color: #555;
    }

    h3 {
        font-weight: bold;
    }
</style>
