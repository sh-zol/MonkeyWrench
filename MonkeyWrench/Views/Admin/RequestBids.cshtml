@using Domain.Core.HomeService.DTOS;
@model List<BidDTO>

<h3>لیست پشنهادات درخواست</h3>
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>شماره سفارش</th>
            <th>نام متخصص</th>
            <th>قیمت پیشنهادی</th>
            <th>شناسه متخصص</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var bid in Model)
        {
                    <tr>
                        <td>@bid.Id</td>
                        <td>@bid.Expert.FullName</td>
                        <td>@bid.Price</td>
                        <td>@bid.ExpertId</td>
                    </tr>
                }
        }
    </tbody>
</table>