@using Domain.Core.HomeService.DTOS;
@model RequestDTO;

@{
    ViewData["Title"] = "جزئیات";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12 mb-3">
            <h3 class="text-center text-info">جزئیات سفارش</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <td class="fw-bold">ساعت ایجاد</td>
                        <td>@Model.CreatedDate</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">نوع سرویس</td>
                        <td>@Model.Service.Title</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">قیمت پایه</td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">آدرس</td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">ساعت انجام</td>
                        <td>@Model.DeadLine</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">نام مشتری</td>
                        <td>@Model.CustomerName</td>
                    </tr>
                    <tr>
                        <td class="fw-bold">نام متخصص</td>
                        <td>
                            @if (Model.ExpertName == null)
                            {
                                <span>متخصصی انتخاب نشده</span>
                            }
                            else
                            {
                                @Model.ExpertName
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="fw-bold">وضعیت سفارش</td>
                        <td>
                            @switch (Model.StatusId)
                            {
                                case 1:
                                    <span>در انتظار پیشنهاد متخصصین</span>
                                    break;
                                case 2:
                                    <span>پیشنهاد متخصص تایید شد</span>
                                    break;
                                case 3:
                                    <span>متخصص به محل رسیده و در حال انجام سفارش است</span>
                                    break;
                                case 4:
                                    <span>در انتظار پرداخت</span>
                                    break;
                                case 5:
                                    <span>سفارش انجام شده</span>
                                    break;
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="col-lg-4 text-center">
            @if (Model.FileLocation == null)
            {
                <p class="text-muted">عکس ندارد</p>
            }
            else
            {
                <img src="@Model.FileLocation" class="img-fluid rounded shadow-sm order-image" alt="عکس سفارش">
            }
        </div>
    </div>
</div>

<style>
    .order-image {
        max-width: 100%;
        height: auto;
        object-fit: cover;
        margin-top: 20px;
    }
</style>