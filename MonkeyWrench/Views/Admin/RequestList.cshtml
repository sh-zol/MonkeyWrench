@using Domain.Core.HomeService.DTOS;
@model List<RequestDTO>

<div class="container mt-4">
    <h3 class="mb-4">لیست سفارشات</h3>

    <table class="table table-striped table-hover table-bordered">
        <thead class="table-light">
            <tr>
                <th>شناسه</th>
                <th>تاریخ ساخت</th>
                <th>نام مشتری</th>
                <th>سرویس</th>
                <th>نام متخصص</th>
                <th>قیمت سرویس</th>
                <th>آدرس مشتری</th>
                <th>زمان مراجعه</th>
                <th>وضعیت سفارش</th>
                <th class="text-center">اعمالات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var request in Model)
            {
                <tr>
                    <td>@request.Id</td>
                    <td>@request.CreatedDate</td>
                    <td>@request.CustomerName</td>
                    <td>@request.Service.Title</td>
                    <td>@request.ExpertName</td>
                    <td>@request.Price <span>هزار تومان</span></td>
                    <td>@request.Address</td>
                    <td>@request.DeadLine</td>
                    <td>@request.StatusTitle</td>
                    <td class="text-center">
                        <a asp-controller="Admin" asp-action="RequestBids" asp-route-requestId="@request.Id"
                           class="btn btn-info btn-sm mx-1">نمایش پیشنهادات</a>
                        <a asp-controller="Admin" asp-action="SeeRequest" asp-route-id="@request.Id"
                           class="btn btn-secondary btn-sm mx-1">جزئیات</a>
                        <a asp-controller="Admin" asp-action="EditRequest" asp-route-id="@request.Id"
                           class="btn btn-warning btn-sm mx-1">ویرایش</a>
                        <a asp-controller="Admin" asp-action="DeleteRequest" asp-route-id="@request.Id"
                           class="btn btn-danger btn-sm mx-1">حذف</a>
                        <a asp-controller="Admin" asp-action="BidList"
                           class="btn btn-success btn-sm mx-1">لیست کلی پیشنهادات</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        font-size: 0.9rem;
    }

    .btn {
        font-size: 0.85rem;
    }

    h3 {
        font-weight: bold;
        color: #333;
    }

    .btn-sm {
        padding: 0.3rem 0.6rem;
    }

    .text-center {
        text-align: center;
    }
</style>
