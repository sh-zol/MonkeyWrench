@using Domain.Core.HomeService.DTOS;
@model List<CategoryDTO>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-lg-12 text-center">
            <h1 class="text-primary mt-3">به صفحه اصلی خوش آمدید</h1>
            <p class="text-muted">
                در اینجا می‌توانید دسته‌بندی‌های مختلف خدمات را مشاهده کنید و به جزئیات هر کدام دسترسی پیدا کنید. برای دیدن سرویس های زیرمجموعه به روی اسم‌ها کلیک کنید
            </p>
        </div>
    </div>
    </div>

<section class="section masonry-layout pt-45">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card-columns d-flex flex-wrap">
                    @foreach (var item in Model)
                    {
                        @if (item.IsActive)
                        {
                            <div class="card" style="width: 18rem; margin: 10px;">
                                <div class="post-card">
                                    <div class="post-card-image">
                                        <a asp-controller="Home" asp-action="ShowCategoryServices" asp-route-categoryId="@item.Id">
                                            <img src="~/Images/WallpaperDog-10970322.png" alt="">
                                        </a>
                                    </div>
                                    <div class="post-card-content">
                                        <h5>
                                            <a asp-controller="Home" asp-action="ShowCategoryServices" asp-route-categoryId="@item.Id">
                                                @item.Title
                                            </a>
                                        </h5>
                                        <p>لورم ایپسوم متن ساختگی با تولید سادگی نامفهوم از صنعت چاپ و با استفاده از طراحان گرافیک است</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>