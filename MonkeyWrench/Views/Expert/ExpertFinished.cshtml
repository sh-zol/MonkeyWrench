@using Domain.Core.HomeService.DTOS;
@model List<RequestDTO>;

<h3 class="text-center my-4">لیست سفارشات انجام شده</h3>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-light">
        <tr class="text-center">
            <th>شماره سفارش</th>
            <th>تاریخ ثبت</th>
            <th>نام مشتری</th>
            <th>قیمت پایه</th>
            <th>آدرس</th>
            <th>زمان درخواست</th>
            <th>اعمالات</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var request in Model)
            {
                <tr class="text-center">
                    <td>@request.Id</td>
                    <td>@request.CreatedDate</td>
                    <td>@request.CustomerName</td>
                    <td>@request.Price</td>
                    <td>@request.Address</td>
                    <td>@request.DeadLine</td>
                    <td>
                        <a asp-controller="Expert" asp-action="RequestDetails" asp-route-requestId="@request.Id" class="btn btn-primary btn-sm">جزئیات</a>
                        @if (request.StatusId == 5)
                        {
                            <span class="badge bg-success ms-2">سفارش انجام شده</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center text-muted">هیچ سفارشی انجام نشده است.</td>
            </tr>
        }
    </tbody>
</table>
