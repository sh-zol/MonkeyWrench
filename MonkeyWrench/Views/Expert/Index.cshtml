@using Domain.Core.User.DTOs;
@model ExpertDTO;

<div class="container mt-4">
    <h3 class="text-center">
        خوش آمدید، @Model.FullName
    </h3>

    @if (Model.FileLocation == null || Model.AboutMe == null || Model.Address == null)
    {
        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="UpdateProfileExpert" class="btn btn-primary">
                پروفایلتون رو آپدیت کنید
            </a>
        </div>
    }
    else
    {
        <div class="profile-section mt-4">
            <p><strong>درباره من:</strong> @Model.AboutMe</p>
            <p><strong>آدرس:</strong> @Model.Address</p>

            <div class="text-center mt-3">
                <img src="@Model.FileLocation" class="rounded-circle profile-image" alt="Profile Picture">
            </div>
        </div>
    }

    <div class="action-buttons mt-4 text-center">
        <a asp-controller="Expert" asp-action="ExpertRequests" class="btn btn-outline-primary mx-2">درخواست‌های من</a>
        <a asp-controller="Account" asp-action="UpdateExpertSkills" class="btn btn-outline-secondary mx-2">اضافه کردن لیست خدمات</a>
        <a asp-controller="Expert" asp-action="ExpertFinished" class="btn btn-outline-success mx-2">لیست سفارش‌های انجام شده</a>
    </div>
</div>

<style>
    .profile-image {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }
</style>
