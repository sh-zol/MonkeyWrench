@using Domain.Core.HomeService.DTOS;
@model RequestDTO;

<div class="container mt-4">
    <form method="post" asp-controller="Customer" asp-action="CreateRequest" enctype="multipart/form-data" class="form-horizontal">
        <h3 class="text-center mb-4">ثبت درخواست</h3>

        <div class="mb-3">
            <label asp-for="DeadLine" class="form-label">زمان موردنظر</label>
            <input type="datetime-local" asp-for="DeadLine" class="form-control" />
            <span asp-validation-for="DeadLine" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Title" class="form-label">موضوع</label>
            <input type="text" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">توضیحات</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">آدرس</label>
            <input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label asp-for="File" class="form-label">عکس</label>
            <input asp-for="File" type="file" class="form-control" />
            <span asp-validation-for="File" class="text-danger small"></span>
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" asp-route-serviceId="@ViewBag.ServiceId" class="btn btn-primary">ثبت سفارش</button>
            <a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">بازگشت</a>
        </div>
    </form>
</div>

<style>
    .form-horizontal .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .form-control {
        font-size: 0.9rem;
        padding: 0.5rem;
    }

    .btn {
        font-size: 0.9rem;
        padding: 0.4rem 1rem;
    }

    .small {
        font-size: 0.8rem;
    }
</style>
