@using Domain.Core.HomeService.DTOS;
@model List<BidDTO>;

<div class="container mt-4">
    <h3 class="text-center mb-3">لیست پیشنهادات درخواست</h3>
    <table class="table table-bordered table-sm text-center">
        <thead class="table-light">
            <tr>
                <th style="width: 15%;">شماره سفارش</th>
                <th style="width: 35%;">نام متخصص</th>
                <th style="width: 25%;">قیمت پیشنهادی</th>
                <th style="width: 25%;">اعمالات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td class="text-wrap">@item.Expert.FullName</td>
                    <td>@item.Price.ToString("N0") تومان</td>
                    <td>
                        <a asp-controller="Customer" 
                           asp-action="ApproveBid"
                           asp-route-requestId="@item.RequestId"
                           asp-route-bidId="@item.Id"
                           asp-route-expertId="@item.ExpertId"
                           class="btn btn-sm btn-info">
                            تایید پیشنهاد
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table th, .table td {
        vertical-align: middle;
        padding: 0.5rem;
    }

    .btn-sm {
        font-size: 0.875rem;
        padding: 0.3rem 0.6rem;
    }
</style>
