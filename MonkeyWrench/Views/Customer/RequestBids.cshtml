@using Domain.Core.HomeService.DTOS;
@model List<BidDTO>

<h3>لیست پشنهادات درخواست</h3>
<table class="table table-striped table-light">
    <thead>
        <tr>
            <th>شماره سفارش</th>
            <th>نام متخصص</th>
            <th>قیمت پیشنهادی</th>
            <th>شناسه متخصص</th>
            <th>اعمالات</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Expert.FullName</td>
                        <td>@item.Price</td>
                        <td>@item.ExpertId</td>
                        <td><a asp-controller="Customer" asp-action="ApproveBid" asp-route-requestId="@item.RequestId" asp-route-bidId="@item.Id" asp-route-expertId="@item.ExpertId" class="btn btn-info">تایید پیشنهاد</a></td>
                    </tr>
        }
    </tbody>
</table>